const cron = require("node-cron"); const config = require("./config");

const greetings = { morning: [ "Selamat pagi semuanya! ğŸŒ", "Pagi! Udah sarapan belum?", "Bangun bangun! Semangat ya hari ini!", "Good morning! Semoga harimu penuh berkah!", "â˜• Waktunya ngopi dan mulai hari!", "Met pagi! Semangat kerja atau sekolahnya!", "Pagi itu awal yang baru, ayo kita mulai dengan senyum!", "Pagi juga buat kamu yang baru bangun siang ğŸ¤­" ], afternoon: [ "Halo siang semuanya! ğŸŒ¤ï¸", "Jangan lupa makan siang, ya!", "Siang yang panas cocok buat tidur siang... tapi kerja dulu ğŸ˜…", "Semangat terus meski siang ngantuk ğŸŒ", "Kalian lagi ngapain di siang hari gini?", "Siang bolong gini enaknya ngopi atau es teh ya?", "Cek energi! Jangan lemes di siang hari!" ], night: [ "Selamat malam ğŸŒ™ Waktunya istirahat!", "Malam! Jangan begadang terus ya", "Udah makan malam belum? ğŸ½ï¸", "Semoga malam ini tenang dan damai buat kalian semua ğŸ˜´", "Good night! Sampai ketemu besok~", "Malam itu waktunya refleksi, besok semangat baru ya!", "Tidur yang nyenyak semua ğŸ’«" ], randomQuestions: [ "Lagi ngapain sekarang?", "Ada cerita seru hari ini?", "Kalo boleh milih, kamu pengen liburan ke mana?", "Lagu yang kamu putar terus minggu ini apa?", "Apa makanan favorit kamu?", "Ada rekomendasi film seru?", "Pernah ngalamin hal kocak minggu ini?", "Kalau bisa teleport, kamu mau ke mana sekarang?" ] };

module.exports = (client) => { const channelId = config.logChannelId; const sendMessage = (messages) => { const channel = client.channels.cache.get(channelId); if (channel && channel.isTextBased()) { const msg = messages[Math.floor(Math.random() * messages.length)]; channel.send(msg); } };

// 7 pagi cron.schedule("0 7 * * *", () => { sendMessage(greetings.morning); });

// 12 siang cron.schedule("0 12 * * *", () => { sendMessage(greetings.afternoon); });

// 9 malam cron.schedule("0 21 * * *", () => { sendMessage(greetings.night); });

// Setiap 4 jam random nanya cron.schedule("0 */4 * * *", () => { if (Math.random() < 0.5) { sendMessage(greetings.randomQuestions); } }); };

